package org.kh.site;
//논리 연산(Logical Operation) : &&(and), ||(or), !(not)
public class Operation7 {
	public static void main(String[] args) {
		int a = 26;
		int b = 25;
		int c = 27;
		//and 논리 : 모든 입력이 true일 경우에만 출력이 true가 된다
		System.out.println("a > b && a > c : "+(a > b && a> c));		//false && false
		System.out.println("a > b && b > c : "+(a > b && b> c));		
		System.out.println("a < b && b < c : "+(a < b && b < c));
		System.out.println("a < b && b > c : "+(a < b && b > c));
		//or 논리 : 입력이 어느 하나라도 true이면 출력이 true가 된다
		System.out.println("a > b || a > c : "+(a > b || a> c));		
		System.out.println("a > b || b > c : "+(a > b || b> c));		
		System.out.println("a < b || b < c : "+(a < b || b < c));
		System.out.println("a < b || b > c : "+(a < b || b > c));
		//not의 논리 : 입력이 true이면, 출력은 false, 입력이 false이면 출력은 true
		System.out.println("!(a > b) : "!(a > b));
	}

}
